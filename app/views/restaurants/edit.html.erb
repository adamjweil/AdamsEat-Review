<body>
<!-- ${param.errorMsg} -->
<h1 style="text-decoration: underline;">Adam's Eat & Review</h1>
	<form action="/restaurants/<%= @restaurant.id %>" method="post">
    <input name="_method" type="hidden" value="patch"/>
		<fieldset><legend>Edit Restaurant</legend>
      <label for="name">Name: </label>
      <input  type="text" name="restaurant[name]" placeholder="<%= @restaurant.name %>" style="width:200px;">
      <label for="cuisine">Cuisine: </label>
      <input  type="text" name="restaurant[cuisine]" placeholder="<%= @restaurant.cuisine %>"style="width:200px;"><br><br>
      <label for="address">Address: </label>
      <input  type="text" name="restaurant[address]" placeholder="<%= @restaurant.address %>" style="width:460px;"><br><br>
      <label for="city">City: </label>
      <input  type="text" name="restaurant[city]" placeholder="<%= @restaurant.city %>">
      <label for="state">State: </label>
      <input  type="text" name="restaurant[state]" style="width:150px;"placeholder="<%= @restaurant.state %>">
      <label for="zip">Zip: </label>
      <input  type="text" name="restaurant[zip]" placeholder="<%= @restaurant.zip %>" style="width:75px;"><br><br>
			<input type="submit" value="Edit Restaurant" id="sub">
		</fieldset>
	</form>
</body>
